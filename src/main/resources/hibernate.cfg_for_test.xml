<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <property name="connection.url">jdbc:mysql://localhost:3306/shops_test</property>
        <property name="connection.username">root</property>
        <property name="connection.password">111</property>

        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="connection.pool_size">100</property>


        <mapping class = "Entity.User" />
        <mapping class = "Entity.User_details" />
        <mapping class = "Entity.Orders" />
        <mapping class = "Entity.Products" />

    </session-factory>
</hibernate-configuration>